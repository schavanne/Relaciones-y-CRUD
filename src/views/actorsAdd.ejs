<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor Add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <a  class="icono" href="/">
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </a>
    <h1 class="titulo">Agregar Actor</h1>
    <br>
    <section class="formulario">
        <form action="/actors/create" method="POST">
            <div>
                <label for="title">First Name </label>
                <p><input type="text" name="first_name" id="" value="<%= locals.old ? old.first_name : null %>" ></p>
                <small style="color: red;"><%= locals.errors && errors.first_name && errors.first_name.msg %> </small>
            </div>
            <div>
                <label for="awards">Last Name </label>
                <p><input type="text" name="last_name" id="" value="<%= locals.old ? old.last_name : null %>"></p>
                <small style="color: red;"><%= locals.errors && errors.last_name && errors.last_name.msg %> </small>
            </div>
            <div>
                <label for="rating">Rating </label>
                <p><input type="number" name="rating" id="" value="<%= locals.old ? old.rating : null %>"> </p>
                <small style="color: red;"><%= locals.errors && errors.rating && errors.rating.msg %> </small>
            </div>

           <div>
            <label for="genreID">Favorite movie </label>
            <p>
                <select name="favorite_movie_id" id="" >
                    <option value="" disabled selected>- seleccione pelicula favorita - </option>
                    <% movies.forEach(movie => { %>
                    <option value="<%= movie.id %>"><%= movie.title %></option>
                    <% }); %>
                </select>
            </p>
            <small style="color: red;"><%= locals.errors && errors.favorite_movie_id && errors.favorite_movie_id.msg %> </small>
           </div>
           
            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/actors">Listado de Actores</a></p>
        </form>
    </section>
    
</body>

</html>