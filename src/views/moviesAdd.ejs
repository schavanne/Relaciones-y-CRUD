<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <a  class="icono" href="/">
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </a>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <div>
                <label for="title">Title </label>
                <p><input type="text" name="title" id="" value="<%= locals.old ? old.title : null %>" ></p>
                <small style="color: red;"><%= locals.errors && errors.title && errors.title.msg %> </small>
            </div>
            <div>
                <label for="rating">Rating </label>
                <p><input type="number" name="rating" id="" value="<%= locals.old ? old.rating : null %>"> </p>
                <small style="color: red;"><%= locals.errors && errors.rating && errors.rating.msg %> </small>
            </div>
            <div>
                <label for="awards">Awards </label>
                <p><input type="number" name="awards" id="" value="<%= locals.old ? old.awards : null %>"></p>
                <small style="color: red;"><%= locals.errors && errors.awards && errors.awards.msg %> </small>
            </div>
            <div>
                <label for="release_date">Release date </label>
                <p><input type="date" name="release_date" id="" value="<%= locals.old ? old.release_date : null %>"></p>
                <small style="color: red;"><%= locals.errors && errors.release_date && errors.release_date.msg %> </small>
            </div>
            <div>
                <label for="length">Length </label>
                <p><input type="number" name="length" id="" value="<%= locals.old ? old.length : null %>"></p>
                <small style="color: red;"><%= locals.errors && errors.length && errors.length.msg %> </small>
            </div>
           <div>
            <label for="genreID">Genre </label>
            <p>
                <select name="genre_id" id="" >
                    <option value="" disabled selected>- seleccione genero - </option>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <small style="color: red;"><%= locals.errors && errors.genre_id && errors.genre_id.msg %> </small>
           </div>
           
            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>